<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context.xsd">
    <!-- Engine class Object -->
    <bean id="eng1" class="org.jsp.dependencyInjection.Engine">
    <constructor-arg value="Petrol"></constructor-arg>
    <constructor-arg value="143"></constructor-arg>
    <constructor-arg value="200"></constructor-arg>
    </bean>
    
    <bean id="eng2" class="org.jsp.dependencyInjection.Engine">
    <constructor-arg value="Diseal"></constructor-arg>
    <constructor-arg value="243"></constructor-arg>
    <constructor-arg value="100"></constructor-arg>
    </bean>
    <bean id="eng3" class="org.jsp.dependencyInjection.Engine">
    <constructor-arg value="Petrol123"></constructor-arg>
    <constructor-arg value="543"></constructor-arg>
    <constructor-arg value="300"></constructor-arg>
    </bean>
	<!-- By using value attribute -->
	<bean id="c1" class="org.jsp.dependencyInjection.Car">
	<constructor-arg value="Benz"></constructor-arg>
	<constructor-arg value="Hyundai"></constructor-arg>
	<constructor-arg value="Black"></constructor-arg>
	<constructor-arg value="300000"></constructor-arg>
	<constructor-arg value="20"></constructor-arg>
	<constructor-arg ref="eng1"></constructor-arg>
	</bean>
	
	<!-- By using value and name attribute -->
	<bean id="c2" class="org.jsp.dependencyInjection.Car">
	<constructor-arg value="Shift" name="carName"></constructor-arg>
	<constructor-arg value="Maruthi" name="carBrand"></constructor-arg>
	<constructor-arg value="white" name="color"></constructor-arg>
	<constructor-arg value="500000" name="price"></constructor-arg>
	<constructor-arg value="25" name="milage"></constructor-arg>
	<constructor-arg ref="eng2" name="engine"></constructor-arg>
	</bean>

	<!-- by using value and index attribute -->
	
	<bean id="c3" class="org.jsp.dependencyInjection.Car">
	<constructor-arg value="Fortuner" index="0"></constructor-arg>
	<constructor-arg value="Hyundai" index="1"></constructor-arg>
	<constructor-arg value="ash" index="2"></constructor-arg>
	<constructor-arg value="700000" index="3"></constructor-arg>
	<constructor-arg value="23" index="4"></constructor-arg>
	<constructor-arg ref="eng3" index="5"></constructor-arg>
	</bean>

</beans>